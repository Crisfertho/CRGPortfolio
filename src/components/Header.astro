---
import { basics } from 'resume.json'
import Section from '@/components/Section.astro'
import Envelope from '@/icons/Envelope.astro'
import Phone from '@/icons/Phone.astro'
import GitHub from '@/icons/Github.astro'
import LinkedIn from '@/icons/Linkedin.astro'
import Instagram from '@/icons/Instagram.astro'
import Earth from '@/icons/Earth.astro'


const {name, label, image, location, phone, email, profiles} = basics
const {city, region} = location

const SOCIAL_ICONS: Record<string, any> = {
    GitHub,
    LinkedIn,
    Instagram,
}   

const linkedInfo = profiles.find(({ network }) => network == "LinkedIn")
const linkedUrl = linkedInfo?.url

const  printInfo = [email, phone, linkedUrl].filter(Boolean).join(" â€¢ ")
---

<Section> 
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>  
                <Earth />
                {city}, {region}
            </span>
            <footer class="print">
                {printInfo}
            </footer>
            <footer class="no-print">
                {
                    email && (
                        <a href={`mailto:${email}`}
                        title={`Send email to ${name} at email ${email}`}
                        target="_blank"
                        rel="noopener noreferrer"  
                        >
                         <Envelope />
                        </a>
                    )
                }
                {
                    phone && (
                        <a href={`tel:${phone}`}
                        title={`Call to ${name} at phone ${phone}`}
                        target="_blank"
                        rel="noopener noreferrer"  
                        >
                         <Phone />
                        </a>
                    )
                } 
                {
                    profiles.map(({ network, url, username }) => {
                        const Icon = SOCIAL_ICONS[network]

                        return (
                            <a
                                href={url}
                                title={`Visit ${name}'s profile at ${network}` }
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon />
                            </a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        color: #133330;
        font-weight: 500;
        font-size: 1.2rem;
        text-wrap: balance;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 115px;
        border-radius: 8px;
    }

    span {
        color: #505b59;
        display: flex;
        align-items: center;
        gap: .30rem;
        font-size: .90rem;
        letter-spacing: -0.05rem;
    }

    footer {
        color: #555;
        font-size: 0.6rem;
        display: flex;
        gap: 3px;
        margin-top: 6px;
    }

    footer a {
        color: #777 !important;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all .3s ease;
    }

    footer a:hover {
        background: #eee;
        border: 1px solid #ddd;
    }

    @media (width <= 700px) {
    .container {
      flex-direction: column-reverse;
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h2 {
      text-wrap: balance;
    }

    figure {
      margin: 0 auto;
    }
  }
</style>