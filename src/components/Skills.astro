---
import Section from '@/components/Section.astro'
import HTML from "@/icons/html.astro"
import CSS from "@/icons/css.astro"
import JavaScript from "@/icons/javascript.astro"
import React from "@/icons/react.astro"
import Node from "@/icons/node.astro"
import MySQL from "@/icons/sql.astro"
import Git from "@/icons/git.astro"
import GitHub from "@/icons/Github.astro"
import Tailwind from "@/icons/tailwind.astro"
import Java from "@/icons/java.astro"
import PHP from "@/icons/php.astro"
import Python from "@/icons/python.astro"
import Laravel from "@/icons/laravel.astro"

import { skills } from "resume.json"

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  React,
  Node,
  MySQL,
  Git,
  GitHub,
  Tailwind,
  Java,
  PHP,
  Python,
  Laravel,
}
---

<Section title="Skills">
    <ul>
        {
            skills.map(({ name }) => {
                const iconName = name === "CSS" ? "CSS" : name
                const Icon = SKILLS_ICONS[iconName]

                return (
                <li>
                    {Icon && <Icon />}<span>{name}</span>
                </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap; /* Evita que se salga de la box*/
    }

    li {
        display: flex;
        align-items: center;
        border-radius: 6px;
        background: #d1d0d0;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
        gap: 3px;
    }

    @media print {
        li {
           /* background: #d1d0d0; /* Asegura que el fondo se mantenga al imprimir */
            -webkit-print-color-adjust: exact; /* Asegura que los colores se impriman como se ven en pantalla */
            /*print-color-adjust: exact; /* Asegura que los colores se impriman como se ven en pantalla */
        }
    }
</style>